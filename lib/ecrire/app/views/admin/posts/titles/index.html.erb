<% content_for :class, 'posts view' %>
<header>
  <%= content_tag :h2, @post.title %>
  <nav>
    <div class='meta'>
      <%= link_to 'Preview', admin_post_path(@post) %>
      <%= link_to 'Tags', admin_post_tags_path(@post) %>
      <%= link_to 'Title', admin_post_titles_path(@post), class: %w(selected) %>
    </div>

  </nav>
</header>

<section>
  <% if @post.published? %>
    <%= render 'admin/posts/titles/form', title: @title, url: admin_post_titles_path(@post) %>
  <% else %>
    <%= render 'admin/posts/titles/form', title: @title, url: admin_post_title_path(@post, @title) %>
  <% end %>

  <h3>Current titles for this post</h3>
  <ul class='titles'>
    <% @post.titles.each do |title| %>
      <%= render 'admin/posts/titles/title', title: title %>
    <% end %>
  </ul>
</section>
