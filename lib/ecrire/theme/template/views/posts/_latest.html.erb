<li class="post latest">
  <figure>
    <%= content_tag :h3, link_to(post.title, url('/:post.year/:post.month/:post.slug', post: post)) %>
    <%= content_tag :time, l(post.published_at.to_date, format: :long) %>
  </figure>
  <div class='content'>
    <%= post.excerpt %>
  </div>

  <%= link_to 'Read more', url('/:post.year/:post.month/:post.slug/', post: post), class: %w(read) %>
</li>
